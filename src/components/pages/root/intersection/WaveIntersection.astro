<div class="overflow-hidden">
  <!-- SVG for waves animation -->
  <svg
    class="waves"
    xmlns="http://www.w3.org/2000/svg"
    xmlns:xlink="http://www.w3.org/1999/xlink"
    viewBox="0 24 150 28"
    preserveAspectRatio="none"
    shape-rendering="auto"
  >
    <!-- Defining SVG element for waves -->
    <defs>
      <!-- Defining the wave path once to reuse it for creating multiple wave layers -->
      <path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z"></path>
    </defs>
    <g class="wave-parallax">
      <!-- Group of waves that will move at different speeds to create a parallax effect -->
      <use xlink:href="#gentle-wave" x="48" y="0" fill="rgba(26,38,47,0.7)"></use>
      <!-- First wave layer -->
      <use xlink:href="#gentle-wave" x="48" y="3" fill="rgba(26,38,47,0.5)"></use>
      <!-- Second wave layer -->
      <use xlink:href="#gentle-wave" x="48" y="5" fill="rgba(26,38,47,0.3)"></use>
      <!-- Third wave layer -->
      <use xlink:href="#gentle-wave" x="48" y="7" fill="#1a262f"></use>
      <!-- Fourth wave layer -->
    </g>
  </svg>
</div>
<!-- Waves end -->
