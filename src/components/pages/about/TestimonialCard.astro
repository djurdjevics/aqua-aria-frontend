---
import {Image} from "astro:assets";

import avatarImage from "../../../../public/avatar.svg"

interface Props {
  quote: string;
  fullName: string;
  location: string;
}

const { quote, fullName, location} = Astro.props;

---


<div class="bg-secondary relative flex w-full flex-col justify-between rounded-2xl p-8 md:[&:nth-child(2)]:mt-6 lg:mt-0 lg:mr-4 lg:w-full lg:p-8">
  <blockquote class="text-bg text-3xl lg:text-[2rem]">
    "{quote}"
  </blockquote>
  <div class="text-bg flex items-center gap-x-3 lg:gap-x-4 mt-[120px]">
    <div class="h-[44px] w-[44px] overflow-hidden rounded-full lg:h-[74px] lg:w-[74px]">
      <Image src={avatarImage} alt="Avatar image" width={74} height={74} />
    </div>
  <div class="">
  <p class="text-base font-semibold lg:text-[20px]">{fullName}</p>
    <p class="text-bg/80 text-sm">{location}</p>
    </div>
    </div>
    </div>

