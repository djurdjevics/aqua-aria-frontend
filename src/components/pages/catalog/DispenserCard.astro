---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
  dispenser: CollectionEntry<"dispensers">;
}

const { dispenser } = Astro.props;
---

<a class="block relative rounded-2xl border group border-slate-200 overflow-hidden h-full" href={dispenser.data.slug}>
  <div class="relative w-full h-[600px]">
    <div
      class="absolute flex items-center justify-center inset-0 bg-white/30 backdrop-blur-xs opacity-0 inset-0 z-20 w-full h-full group-hover:opacity-100 transition duration-500"
    >
      <button class="px-12 py-3 cursor-pointer uppercase bg-primary rounded-sm text-white font-semibold">Saznaj vi≈°e</button>
    </div>
    <Image
      quality={100}
      class="w-full h-full object-contain group-hover:scale-110 scale-100 transition-all duration-300"
      src={dispenser.data.images[0]}
      alt={`${dispenser.data.name}`}
      width={800}
      height={1200}
    />
  </div>
  <div
    class="flex transition duration-500 bg-secondary group-hover:bg-white/5 group-hover:backdrop-blur-sm justify-between items-center px-4 py-[10px] md:p-4 lg:p-7"
  >
    <div class="space-y-1">
      <p class="font-display transition duration-150 leading-[120%] text-bg group-hover:text-secondary text-lg lg:text-[2rem]">
        {dispenser.data.type}
        <br />
        {dispenser.data.name}
      </p>
    </div>
    <p class="text-bg font-semibold transition group-hover:text-secondary duration-500 lg:text-[28px]">{dispenser.data.price.toLocaleString("de-DE")} rsd</p>
  </div>
</a>
